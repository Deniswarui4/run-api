# Server Configuration
PORT=8080
GIN_MODE=release
ENVIRONMENT=production

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=event_ticketing
DB_SSLMODE=disable

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY_HOURS=24

# Authboss Configuration
AUTHBOSS_COOKIE_SECRET=your-cookie-secret-key-32-chars-min
AUTHBOSS_SESSION_SECRET=your-session-secret-key-32-chars-min

# Payment Configuration (Paystack)
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key
PAYSTACK_CALLBACK_URL=http://localhost:8080/api/v1/payments/callback

# Email Configuration (Resend)
RESEND_API_KEY=re_your_resend_api_key
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Event Ticketing Platform

# Storage Configuration (S3/R2)
# Leave empty to use local storage
STORAGE_TYPE=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_BUCKET_NAME=
AWS_ENDPOINT=
# For Cloudflare R2, set AWS_ENDPOINT to your R2 endpoint

# Local Storage Configuration
LOCAL_STORAGE_PATH=./storage

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# Platform Configuration
DEFAULT_PLATFORM_FEE_PERCENTAGE=5.0
DEFAULT_WITHDRAWAL_FEE_PERCENTAGE=2.5
CURRENCY=NGN

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000
